<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PublicityActivity"
    android:background="@color/black"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/entreprise_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_list"
        app:titleTextColor="@color/blanc"
        android:theme="@style/ToolbarThemeTwo">

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entreprise_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ViewFlipper
                    android:id="@+id/viewFlipper"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fragment_home_image_slider"
                    android:autoStart="true"
                    android:flipInterval="4000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:src="@drawable/t_shirt"
                        android:id="@+id/imageSlideOne"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fragment_home_image_slider"
                        android:scaleType="centerCrop" />


                    <ImageView
                        android:id="@+id/imageSlideTwo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fragment_home_image_slider"
                        android:scaleType="centerCrop" />


                    <ImageView
                        android:id="@+id/imageSlideThree"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fragment_home_image_slider"
                        android:scaleType="centerCrop" />
                </ViewFlipper>

                <TextView
                    android:id="@+id/img1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/img2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/img3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/img4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="invisible" />


                <TextView
                    android:id="@+id/publicity_description"
                    android:layout_width="@dimen/pub_desc_text_size"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="@dimen/pub_desc_top"
                    android:layout_marginEnd="24dp"
                    android:fontFamily="@font/righteous"
                    android:text=" le lorem Le Lorem Ipsum est simplement du faux texte employé dans la composition et la mise en page avant impression. Le Lorem Ipsum est le faux texte standard de l'imprimerie depuis les années 1500. "
                    android:textAlignment="center"
                    android:textColor="@color/blanc"
                    android:textSize="@dimen/new_detail_desc_text_size"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/publicity_entreprise_name" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/pub_location_start"
                    android:layout_marginTop="@dimen/pub_first_image_top"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/publicity_description"
                    app:srcCompat="@drawable/ic_room_black_24dp" />

                <TextView
                    android:id="@+id/publicity_location_entreprise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/righteous"
                    android:text="Douala"
                    android:textSize="@dimen/pub_dec_text_size"
                    android:textStyle="bold"
                    android:textColor="@color/blanc"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView7"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/imageView7"
                    app:layout_constraintTop_toTopOf="@+id/imageView7" />

                <TextView
                    android:id="@+id/publicity_entreprise_name"
                    android:layout_width="@dimen/text_choice_widht"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/righteous"
                    android:text="Lorem ipsum"
                    android:textAlignment="center"
                    android:textColor="@color/blanc"
                    android:textSize="@dimen/pub_title_text_size"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/viewFlipper" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/pub_location_start"
                    android:layout_marginTop="@dimen/pub_image_top"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView7"
                    app:srcCompat="@drawable/ic_phone_black_24dp" />

                <TextView
                    android:id="@+id/publicity_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/righteous"
                    android:text="656209008"
                    android:textSize="@dimen/pub_dec_text_size"
                    android:textStyle="bold"
                    android:textColor="@color/blanc"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView8"
                    app:layout_constraintStart_toEndOf="@+id/imageView8"
                    app:layout_constraintTop_toTopOf="@+id/imageView8" />

                <Button
                    android:id="@+id/publicity_call_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/pub_button_start_end"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="@dimen/pub_button_start_end"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/button_background"
                    android:fontFamily="@font/righteous"
                    android:text="appeler"
                    android:elevation="5dp"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView8"
                    app:layout_constraintVertical_bias="0.0" />
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </ScrollView>



</android.support.constraint.ConstraintLayout>