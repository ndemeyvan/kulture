<?xml version="1.0" encoding="utf-8"?>
<com.flipboard.bottomsheet.BottomSheetLayout
    android:id="@+id/bottomsheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    >
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".postActivity.UserGeneralPresentation">


   <!-- <android.support.v7.widget.Toolbar
        android:id="@+id/general_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blanc"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/black"
        /> -->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!-- app:layout_constraintTop_toBottomOf="@+id/general_toolbar"-->
        android:background="@color/black"

        >

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                >

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    >

                    <TextView
                        android:id="@+id/general_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:fontFamily="@font/righteous"
                        android:textColor="#ff17"
                        android:textSize="@dimen/new_profil_name_text_size"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/generalImageProfilUser" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/generalImageProfilUser"
                        android:layout_width="@dimen/new_profil_image_dimen"
                        android:layout_height="@dimen/new_profil_image_dimen"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="70dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/boy"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <!-- android:layout_marginTop="@dimen/margin_top_new_profil_design" -->
                    android:layout_marginEnd="@dimen/new_profil_margin_end"
                    android:src="@drawable/boy"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                    <ProgressBar
                        android:id="@+id/user_general_progress"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="@dimen/nvx_item_nvx_like_image"
                        android:layout_height="@dimen/nvx_item_nvx_like_image"
                        android:theme="@style/progress_theme"
                        android:layout_marginBottom="8dp"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toBottomOf="@+id/generalImageProfilUser"
                        app:layout_constraintEnd_toEndOf="@+id/generalImageProfilUser"
                        app:layout_constraintStart_toStartOf="@+id/generalImageProfilUser"
                        app:layout_constraintTop_toTopOf="@+id/generalImageProfilUser" />

                    <TextView
                        android:id="@+id/detail_user"
                        android:layout_width="@dimen/new_profil_desc_widht"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/righteous"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/new_profil_text_size"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/general_user_name"
                        app:layout_constraintStart_toStartOf="@+id/general_user_name"
                        app:layout_constraintTop_toBottomOf="@+id/general_user_name" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="@dimen/new_profil_view_widht"
                        android:layout_height="@dimen/new_profil_view_height"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="@dimen/new_profil_view_margin_end"
                        android:background="@color/blanc"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/detail_user" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/image_enplacement_new_profil_margin_start"
                        android:layout_marginTop="@dimen/new_profil_image_margin_top"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view2"
                        app:srcCompat="@drawable/ic_room_black_24dp" />

                    <TextView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="110dp"
                        android:layout_marginEnd="110dp"
                        android:fontFamily="@font/nunito_bold"
                        android:text="vu le"
                        android:textColor="@color/blanc"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                        app:layout_constraintEnd_toStartOf="@+id/imageView4"
                        app:layout_constraintStart_toEndOf="@+id/imageView2"
                        app:layout_constraintTop_toTopOf="@+id/imageView2"
                        app:layout_constraintVertical_bias="0.0" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/new_profil_image_margin_top"
                        android:layout_marginEnd="@dimen/image_enplacement_new_profil_margin_start"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view2"
                        app:srcCompat="@drawable/ic_shopping_cart_black_24dp" />

                    <TextView
                        android:id="@+id/general_residence"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/new_profil_text_margin_top"
                        android:fontFamily="@font/righteous"
                        android:text="xxxx"
                        android:textAlignment="center"
                        android:textColor="@color/blanc"

                        android:textSize="@dimen/new_profil_text_size"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/imageView2"
                        app:layout_constraintStart_toStartOf="@+id/imageView2"
                        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

                    <TextView
                        android:id="@+id/general_last_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/righteous"
                        android:text="xxxx"
                        android:textColor="@color/blanc"
                        android:textSize="@dimen/new_profil_text_size"

                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/general_residence"
                        app:layout_constraintEnd_toEndOf="@+id/imageView3"
                        app:layout_constraintStart_toStartOf="@+id/imageView3"
                        app:layout_constraintTop_toTopOf="@+id/general_residence"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/total_vente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/righteous"
                        android:text="xxxx"
                        android:textColor="@color/blanc"
                        android:textSize="@dimen/new_profil_text_size"

                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/imageView4"
                        app:layout_constraintStart_toStartOf="@+id/imageView4"
                        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

                    <View
                        android:id="@+id/view3"
                        android:layout_width="@dimen/new_profil_view_widht"
                        android:layout_height="@dimen/new_profil_view_height"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="@dimen/new_profil_view_margin_top"
                        android:layout_marginEnd="@dimen/new_profil_view_margin_end"
                        android:background="@color/blanc"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/general_last_view" />

                    <Button
                        android:id="@+id/general_voir_ventes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/new_profil_button"
                        android:layout_marginTop="@dimen/new_profil_button_margin_top"
                        android:layout_marginEnd="@dimen/new_profil_button"
                        android:background="@drawable/button_background"
                        android:text="voir ventes "
                        android:textAllCaps="false"
                        android:fontFamily="@font/righteous"

                        android:textColor="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view3" />

                    <Button
                        android:id="@+id/general_button_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/new_profil_button"
                        android:layout_marginTop="@dimen/new_profil_button_margin_top"
                        android:layout_marginEnd="@dimen/new_profil_button"
                        android:layout_marginBottom="32dp"
                        android:background="@drawable/main_background"
                        android:text="contacter"
                        android:textAllCaps="false"
                        android:fontFamily="@font/righteous"
                        android:textColor="@color/blanc"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/general_voir_ventes" />

                    <View
                        android:id="@+id/view4"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/blanc"
                        app:layout_constraintBottom_toTopOf="@+id/generalImageProfilUser"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/close_bottom_sheet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="32dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_close_bottom_sheet" />

                    <ImageView
                        android:id="@+id/ic_bottom_sheet_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_bottom_sheet_up" />

                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
</com.flipboard.bottomsheet.BottomSheetLayout>