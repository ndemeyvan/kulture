<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/nouveaute_card_width_height"
    android:layout_height="@dimen/nouveaute_card_width_height"
    android:layout_marginRight="7dp"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginLeft="6dp"
    app:layout_goneMarginRight="6dp">
    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/nouveaute_card_width_height"
        android:layout_height="@dimen/nouveaute_card_width_height"
        android:id="@+id/container">
        <android.support.v7.widget.CardView
            android:layout_width="@dimen/nouveaute_card_width_height"
            android:layout_height="@dimen/nouveaute_card_width_height"
            android:elevation="5dp"
            android:id="@+id/card_nvx"
            app:cardBackgroundColor="@color/blanc"
            app:cardCornerRadius="5dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:src="@drawable/t_shirt"
                    android:id="@+id/nouveaute_image"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/nouveaut_image_height"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/nouveaux_description_du_produit"
                    android:layout_width="@dimen/nouveaute_test_desc"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:ellipsize="end"
                    android:lines="3"
                    android:text="olala un nouveaux vetement juste pour toi"
                    android:textColor="@color/black"
                    android:textSize="@dimen/item_principal_desc"
                    app:fontFamily="@font/nunito_bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.51"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nouveaute_image" />

                <ImageView
                    android:id="@+id/nouveaux_image_profile"
                    android:layout_width="@dimen/nvx_item_nvx_image_dim_height_with"
                    android:layout_height="@dimen/nvx_item_nvx_image_dim_height_with"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/boy"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/nouveaux_description_du_produit"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/nouveaux_description_du_produit"
                    app:layout_constraintTop_toBottomOf="@+id/nouveaux_description_du_produit" />

                <TextView
                    android:id="@+id/nouveaux_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/principal_image_round_start"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    android:text="open market"
                    android:textColor="@color/black"
                    android:textSize="@dimen/item_principal_name"
                    android:textStyle="bold"
                    android:theme="@style/ToolbarTheme"
                    app:fontFamily="@font/nunito_bold"
                    app:layout_constraintBottom_toBottomOf="@+id/nouveaux_image_profile"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/nouveaux_image_profile"
                    app:layout_constraintTop_toBottomOf="@+id/nouveaux_tire" />

                <TextView
                    android:id="@+id/nouveaux_temps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/nunito_bold"
                    android:text="17 juil 2019"
                    android:textSize="@dimen/nvx_item_nvx_date"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/nouveaux_user_name"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/nouveaux_user_name"
                    app:layout_constraintTop_toBottomOf="@+id/nouveaux_user_name" />

                <ImageView
                    android:id="@+id/like_image"
                    android:layout_width="@dimen/nvx_item_nvx_like_image"
                    android:layout_height="@dimen/nvx_item_nvx_like_image"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="32dp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.895"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/ic_like" />

                <TextView
                    android:id="@+id/nouveaux_nombre_de_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="32dp"
                    android:text="xxx"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    app:fontFamily="sans-serif-condensed"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.994"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/nouveaux_prix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="5000"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/nouveaute_text_price"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/nouveaux_user_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.953"
                    app:layout_constraintStart_toEndOf="@+id/nouveaux_user_name"
                    app:layout_constraintTop_toTopOf="@+id/nouveaux_user_name"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/nouveaux_tire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-condensed"
                    android:lines="1"
                    android:textColor="@color/black"
                    android:text="chaussure blanche"
                    android:textSize="@dimen/nvx_item_nvx_titre"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/nouveaux_image_profile"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.08"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nouveaux_description_du_produit" />

                <TextView
                    android:id="@+id/categorieChoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@+id/nouveaute_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

                <ProgressBar
                    android:id="@+id/nouveaux_progress"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="@dimen/nvx_item_nvx_like_image"
                    android:layout_height="@dimen/nvx_item_nvx_like_image"
                    android:theme="@style/progress_theme"
                    app:layout_constraintBottom_toBottomOf="@+id/nouveaux_image_profile"
                    app:layout_constraintEnd_toEndOf="@+id/nouveaux_image_profile"
                    app:layout_constraintHorizontal_bias="0.533"
                    app:layout_constraintStart_toStartOf="@+id/nouveaux_image_profile"
                    app:layout_constraintTop_toBottomOf="@+id/nouveaux_tire"
                    app:layout_constraintVertical_bias="0.588" />

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>