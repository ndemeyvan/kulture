<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/the_constraint">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chat_imag_item"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/boy"
            android:visibility="invisible"
            app:layout_constraintEnd_toStartOf="@+id/show_message"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/show_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/background_dipay_message_right"
            android:fontFamily="@font/nunito_bold"
            android:maxWidth="250dp"
            android:padding="8dp"
            android:text="Hello"
            android:textColor="@color/black"
            android:textSize="@dimen/item_principal_desc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/current_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/righteous"
            android:textColor="@color/blanc"
            app:layout_constraintEnd_toEndOf="@+id/show_message"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/show_message"
            app:layout_constraintTop_toBottomOf="@+id/show_message" />


    </android.support.constraint.ConstraintLayout>



</android.support.constraint.ConstraintLayout>