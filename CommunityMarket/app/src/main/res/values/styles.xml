<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ff17</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/blanc</item>
    </style>
    <style name="AppTheme.AppBarOverlay_two" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:fontFamily">@font/righteous</item>
    </style>

<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="slash" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/righteous</item>

        <item name="android:windowBackground">@drawable/splash_activity_background</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/righteous</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_arrow</item>
    </style>
    <style name="ToolbarTheme_two" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_arrow</item>
    </style>
    <style name="ToolbarThemeTwo" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/righteous</item>
        <item name="colorPrimary">@color/blanc</item>
        <item name="android:colorAccent">@color/blanc</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_arrow</item>
    </style>
    <style name="edit_theme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/righteous</item>
        <item name="colorPrimary">@color/blanc</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/blanc</item>
    </style>
    <style name="progress_theme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/righteous</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="price_style">
        <item name="android:fontFamily">@font/bangers</item>
    </style>
</resources>
